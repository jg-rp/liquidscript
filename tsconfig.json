{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "downlevelIteration": true,
    "diagnostics": false,
    "esModuleInterop": true,
    "extendedDiagnostics": false,
    "listEmittedFiles": false,
    "module": "commonjs",
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "noImplicitAny": true,
    "types": ["jest", "node"],
    "incremental": true,
    "importHelpers": true,
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "__mocks__",
    "lib",
    "dist",
    "benchmark"
  ]
}
